<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@color/colorGrayWhite">




    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/linearLayoutDisplayNameMesssageTime"
            android:layout_marginLeft="0dp"
            >

            <TextView
                android:id="@+id/textViewDisplayName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="Nickname"
                android:gravity="left"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:id="@+id/textViewMessageTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="right"
                android:text="Time"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayoutDisplayNameMesssageTime"
            android:layout_toRightOf="@+id/imageViewAvatar"
            android:layout_marginLeft="2dp"
            android:text="Message"
            android:textColor="@color/colorBlack"/>

    </RelativeLayout>

</LinearLayout>