    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageViewAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/textViewDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="DisplayName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewAvatar"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="100 coins"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/textViewCoins"
        android:layout_below="@id/textViewDisplayName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:gravity="center"
        />

    <Button
        android:text="Change your display name"
        android:id="@+id/buttonDisplayNameChange"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/buttonPasswordChange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


    <Button
        android:text="Change your password"
       android:id="@+id/buttonPasswordChange"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewCoins"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>
