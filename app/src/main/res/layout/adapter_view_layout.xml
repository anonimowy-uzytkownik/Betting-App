<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"

    android:layout_height="match_parent"
    android:weightSum="100">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="60">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textViewResult"
            android:layout_marginRight="50dp"
            android:layout_marginTop="100dp"
            android:id="@+id/imageViewTeam1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewResult"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/imageViewTeam2"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/textViewResult"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:id="@+id/textViewTeam1Name"
            android:layout_toLeftOf="@+id/textViewResult"
            android:layout_below="@+id/imageViewTeam1"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:id="@+id/textViewTeam2Name"
            android:layout_toRightOf="@+id/textViewResult"
            android:layout_below="@+id/imageViewTeam2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textViewResult"
            android:layout_below="@+id/textViewTeam2Name"
            android:layout_marginRight="40dp"
            android:id="@+id/buttonTeam1"
            android:layout_marginTop="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTeam2Name"
            android:layout_centerHorizontal="true"
            android:id="@+id/buttonTeamDraw"
            android:layout_marginTop="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewResult"
            android:layout_below="@+id/textViewTeam2Name"
            android:layout_marginLeft="40dp"
            android:id="@+id/buttonTeam2"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>

</LinearLayout>