<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:weightSum="100"
    >




    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:background="@color/colorGray"
        android:layout_marginBottom="1dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toLeftOf="@+id/textViewResult"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/imageViewTeam1"
            android:focusable="false"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/textViewResult"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/imageViewTeam2"
            android:focusable="false"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="57dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/textViewResult"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="false"
            android:textSize="22dp"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/textViewTeam1Name"
            android:layout_toLeftOf="@+id/textViewResult"
            android:layout_below="@+id/imageViewTeam1"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:focusable="false"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/textViewTeam2Name"
            android:layout_toRightOf="@+id/textViewResult"
            android:layout_below="@+id/imageViewTeam2"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:focusable="false"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"

            />

        <Button
            android:id="@+id/buttonMatchExtended"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:alpha="0.0"
            />


    </RelativeLayout>

</LinearLayout>